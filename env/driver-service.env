#==========================================
# Driver Service Configuration
#==========================================
NODE_ENV=development
SERVICE_NAME=driver-service
PORT=3000

#==========================================
# Database Configuration (MongoDB)
#==========================================
DB_URI=mongodb://admin:uitgo123@mongodb-drivers:27017/uitgo_drivers?authSource=admin
DB_NAME=uitgo_drivers
DB_CONNECTION_TIMEOUT=5000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

#==========================================
# Redis Configuration (Geospatial Operations)
#==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=1
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

#==========================================
# Geospatial Configuration
#==========================================
# Redis key for driver locations
DRIVER_LOCATION_KEY=driver_locations
# Maximum search radius in meters
MAX_SEARCH_RADIUS=10000
# Default search radius in meters
DEFAULT_SEARCH_RADIUS=5000
# Location update interval in seconds
LOCATION_UPDATE_INTERVAL=10
# Maximum drivers to return in search
MAX_DRIVERS_IN_SEARCH=50

#==========================================
# Security Configuration
#==========================================
JWT_SECRET=uit-go-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

#==========================================
# Rate Limiting Configuration
#==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later

#==========================================
# CORS Configuration
#==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

#==========================================
# Logging Configuration
#==========================================
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_DIR=./logs

#==========================================
# Kafka Configuration
#==========================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=driver-service
KAFKA_GROUP_ID=driver-service-group

#==========================================
# WebSocket Configuration
#==========================================
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:8080

#==========================================
# Feature Flags
#==========================================
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKET=true

#==========================================
# Service Discovery & Communication
#==========================================
USER_SERVICE_URL=http://user-service:3000
TRIP_SERVICE_URL=http://trip-service:3000NV=development
PORT=3000

MONGODB_URI=mongodb://admin:uitgo123@mongodb-drivers:27017/uitgo_drivers?authSource=admin
REDIS_URL=redis://:redis123@redis:6379
KAFKA_BROKERS=kafka:29092