#==========================================
# Trip Service Configuration
#==========================================
NODE_ENV=development
SERVICE_NAME=trip-service
PORT=3000

#==========================================
# Database Configuration (MongoDB)
#==========================================
DB_URI=mongodb://admin:uitgo123@mongodb-trips:27017/uitgo_trips?authSource=admin
DB_NAME=uitgo_trips
DB_CONNECTION_TIMEOUT=5000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

#==========================================
# Redis Configuration
#==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=2
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

#==========================================
# Trip Configuration
#==========================================
# Driver acceptance timeout in seconds
DRIVER_ACCEPTANCE_TIMEOUT=300
# Maximum number of drivers to notify per trip
MAX_DRIVERS_PER_TRIP=5
# Trip search radius in meters
TRIP_SEARCH_RADIUS=5000
# Pricing per kilometer
BASE_PRICE=5000
PRICE_PER_KM=12000
# Maximum trip duration in hours
MAX_TRIP_DURATION=24

#==========================================
# Security Configuration
#==========================================
JWT_SECRET=uit-go-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

#==========================================
# Rate Limiting Configuration
#==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later

#==========================================
# CORS Configuration  
#==========================================
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

#==========================================
# Logging Configuration
#==========================================
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_DIR=./logs

#==========================================
# Kafka Configuration
#==========================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=trip-service
KAFKA_GROUP_ID=trip-service-group

#==========================================
# WebSocket Configuration
#==========================================
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGIN=*

#==========================================
# Feature Flags
#==========================================
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKET=true

#==========================================
# Service Discovery & Communication
#==========================================
USER_SERVICE_URL=http://user-service:3000
DRIVER_SERVICE_URL=http://driver-service:3000