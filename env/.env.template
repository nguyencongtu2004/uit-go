# Environment Configuration Template for All Services
# Copy this file and customize for each service

#==========================================
# Service Configuration
#==========================================
NODE_ENV=development
SERVICE_NAME=template-service
PORT=3000

#==========================================
# Database Configuration (MongoDB)
#==========================================
DB_URI=mongodb://admin:uitgo123@mongodb-template:27017/uitgo_template?authSource=admin
DB_NAME=uitgo_template
DB_CONNECTION_TIMEOUT=5000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

#==========================================
# Redis Configuration
#==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

#==========================================
# Security Configuration
#==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

#==========================================
# Rate Limiting Configuration
#==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later

#==========================================
# CORS Configuration
#==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

#==========================================
# Logging Configuration
#==========================================
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_DIR=./logs

#==========================================
# Health Check Configuration
#==========================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

#==========================================
# Kafka Configuration
#==========================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=template-service
KAFKA_GROUP_ID=template-service-group

#==========================================
# Performance Configuration
#==========================================
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb
MAX_CONCURRENT_REQUESTS=1000

#==========================================
# Feature Flags
#==========================================
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true

#==========================================
# Service Discovery & Communication
#==========================================
# Internal service URLs (for service-to-service communication)
USER_SERVICE_URL=http://user-service:3000
DRIVER_SERVICE_URL=http://driver-service:3000
TRIP_SERVICE_URL=http://trip-service:3000

#==========================================
# Monitoring & Metrics
#==========================================
ENABLE_PROMETHEUS_METRICS=false
PROMETHEUS_PORT=9090
ENABLE_APM=false

#==========================================
# Development Configuration
#==========================================
# Enable hot reload in development
ENABLE_HOT_RELOAD=true
# Enable debug logging
ENABLE_DEBUG=true
# Mock external services
MOCK_EXTERNAL_SERVICES=false